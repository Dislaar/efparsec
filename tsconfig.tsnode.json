{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src/server.tsnode.ts", "src/parser.tsnode.ts", "src/types2.ts", "src/utils.tsnode.ts"],
  "exclude": ["node_modules"]
}